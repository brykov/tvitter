= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  .mdl-card.mdl-shadow--2dp.util-position__center
    .mdl-card__title
      %h2.mdl-card__title-text Sign up
    .mdl-card__supporting-text
      = devise_error_messages!
      .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
        = f.email_field :email, autofocus: true, autocomplete: 'email', class: 'mdl-textfield__input'
        = f.label :email, class: 'mdl-textfield__label'
      .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
        = f.text_field :username, autocomplete: 'username', class: 'mdl-textfield__input'
        = f.label :username, class: 'mdl-textfield__label'
      .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
        = f.text_field :name, autocomplete: 'name', class: 'mdl-textfield__input'
        = f.label :name, class: 'mdl-textfield__label'
      .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
        = f.password_field :password, autocomplete: 'new-password', class: 'mdl-textfield__input'
        = f.label :password, class: 'mdl-textfield__label'
      .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
        = f.password_field :password_confirmation, autocomplete: 'new-password', class: 'mdl-textfield__input'
        = f.label :password_confirmation, class: 'mdl-textfield__label'
    .mdl-card__actions
      = f.submit 'Sign up', class: 'mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--raised mdl-button--colored'
      = render 'devise/shared/links'