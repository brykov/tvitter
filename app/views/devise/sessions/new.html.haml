= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  .mdl-card.mdl-shadow--2dp.util-position__center
    .mdl-card__title
      %h2.mdl-card__title-text Log in
    .mdl-card__supporting-text
      .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
        = f.email_field :email, autofocus: true, autocomplete: 'email', class: 'mdl-textfield__input'
        = f.label :email, class: 'mdl-textfield__label'
      .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
        = f.password_field :password, autocomplete: 'new-password', class: 'mdl-textfield__input'
        = f.label :password, class: 'mdl-textfield__label'
      - if devise_mapping.rememberable?
        %label.mdl-switch.mdl-js-switch.mdl-js-ripple-effect
          = f.check_box :remember_me, class: 'mdl-switch__input'
          %span.mdl-switch__label Remember me
    .mdl-card__actions
      = f.submit 'Log in', class: 'mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--raised mdl-button--colored'
      = render 'devise/shared/links'
