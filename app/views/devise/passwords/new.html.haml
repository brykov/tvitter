= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
  .mdl-card.mdl-shadow--2dp.util-position__center
    .mdl-card__title
      %h2.mdl-card__title-text Forgot your password?
    .mdl-card__supporting-text
      = devise_error_messages!
      .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
        = f.email_field :email, autofocus: true, autocomplete: 'email', class: 'mdl-textfield__input'
        = f.label :email, class: 'mdl-textfield__label'
    .mdl-card__actions
      = f.submit 'Send reset password instructions'.html_safe, class: 'mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--raised mdl-button--colored'
      = render 'devise/shared/links'

